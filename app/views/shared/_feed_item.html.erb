<div class="box col6" style="background: #ffffff;
			     border-radius: 10px; 
			     border-style: outset; 
			     border-color: #eaeaea #eaeaea; 
			     border-width: 0px;" >


<span class="user">
      <%= link_to feed_item.user.name, feed_item.user %>
    </span> 
<li id="<%= feed_item.id %>">
<%if feed_item.avatar?%>
<div class = "imagebox" style="padding-bottom: 5px">
<%= link_to image_tag(feed_item.avatar.url(:thumb)), feed_item %>
  </div>
 <%end%>

  
    <span class="content"> 
    	<%= feed_item.content %> 
    </span>
    
    
    <span class="timestamp">
      Posted <%= time_ago_in_words(feed_item.created_at) %> ago.
    </span>
    
    
  <% if current_user == (feed_item.user) %>
  <%= link_to "delete", feed_item, method: :delete,
                                   data: { confirm: "You sure?" },
                                   title: feed_item.content %>
  <% end %>
  
</li>
</div>


